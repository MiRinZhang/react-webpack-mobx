{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "extends": "airbnb/base",
    "rules": {
        "indent": ["error", 4],
        "max-len": [1, 70, 2, {"ignoreComments": true}],
        "no-unused-vars": [1],
        "import/no-unresolved": 0,
        "import/extensions": 0,
        "no-param-reassign": 0
    },
    "globals": {
        "document": true
    },
    "class-methods-use-this": [2, "exceptMethods": [
      "componentDidMount",
      "componentDidUpdate",
      "componentWillMount",
      "componentWillReceiveProps",
      "componentWillUnmount",
      "componentWillUpdate",
      "render",
      "shouldComponentUpdate",
    ]],
    "import/no-extraneous-dependencies": ["warning", {
      "devDependencies": true,
      "optionalDependencies": false,
      "peerDependencies": false
      }
    ]
}
